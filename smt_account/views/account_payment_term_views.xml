<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_payment_term_form_inherit" model="ir.ui.view">
        <field name="name">view.payment.term.form.inherit.smarteo</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="default_description"/>
                <field name="payment_method" widget="radio" attrs="{
                    'required': [('default_description', '=', True)],
                    'invisible': [('default_description', '=', False)],
                }"/>
            </field>
            <label for="note" position="attributes">
                <attribute name="attrs">{'invisible': [('default_description', '=', True)]}</attribute>
            </label>
            <field name="note" position="attributes">
                <attribute name="attrs">{'invisible': [('default_description', '=', True)]}</attribute>
            </field>
        </field>
    </record>
</odoo>