<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_partner_form_oti_contacts" model="ir.ui.view">
        <field name="name">view.partner.form.oti.contacts</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="nif" string="NIF" placeholder="NIF" attrs="{'invisible': [('company_type', '!=', 'company')]}"/>
                <field name="stat" string="STAT" placeholder="STAT" attrs="{'invisible': [('company_type', '!=', 'company')]}"/>
                <field name="rcs" string="RCS" placeholder="RCS" attrs="{'invisible': [('company_type', '!=', 'company')]}"/>
                <field name="cif" string="CIF" placeholder="CIF" attrs="{'invisible': [('company_type', '!=', 'company')]}"/>
            </field>
            <field name="vat" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
</odoo>