<odoo>
    <data>
        <record id="hr_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='personal_information']/group/group/field[@name='phone']" position="attributes">
                    <attribute name="readonly">False</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//notebook/page[@name='personal_information']/group/group/field[@name='private_email']" position="attributes">
                    <attribute name="readonly">False</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>