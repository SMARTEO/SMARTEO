                        <field name="abs_wage_number" type="measure"/>
                        <field name="idemnlog_wage" type="measure"/>
                        <field name="idemnrepas_wage" type="measure"/>
                        <field name="tnh30_wage_base" type="measure"/>
                        <field name="tnh50_wage_base" type="measure"/>
                        <field name="tdim40_wage_base" type="measure"/>
                        <field name="hsupp100_wage_base" type="measure"/>
                        <field name="hsupp130_wage_base" type="measure"/>
                        <field name="hsupp150_wage_base" type="measure"/>
                        <field name="hsuppexo30_wage_base" type="measure"/>
                        <field name="hsuppexo50_wage_base" type="measure"/>
                        <field name="totalhsexo_wage" type="measure"/>
                        <field name="gross_gross_wage" type="measure"/>
