<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="report_stock_report" inherit_id="stock.report_delivery_document">
            <xpath expr="//div[@name='signature']" position="before">
                <span t-if="o.note != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'">
                    <span>NOTE : </span>
                    <span t-esc="o.note" />
                </span>
            </xpath>
            <xpath expr="//t[@t-set='address']/div[@name='div_outgoing_address']/div[@t-if='o.move_ids_without_package and o.move_ids_without_package[0].partner_id and o.move_ids_without_package[0].partner_id != partner']" position="replace">
                <div t-if="o.move_ids_without_package and o.move_ids_without_package[0].partner_id and o.move_ids_without_package[0].partner_id != partner">
                    <span><strong>Delivery Address:</strong></span>
                    <div>
                        Sale
                        <span t-field="o.sale_id"/>
                    </div>
                    <div t-if="o.sale_id and o.sale_id.partner_shipping_id" t-field="o.sale_id.partner_shipping_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    <div t-else="" t-field="o.sale_id.partner_shipping_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                </div>
            </xpath>
        </template>

    </data>
</odoo>