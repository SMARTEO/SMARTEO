<odoo>
    <data>
        <record id="product_product_tree_inherit" model="ir.ui.view">
            <field name="name">product.product.tree.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.view_stock_product_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='qty_available']" position="after">
                    <field name="standard_price" optional="show" string="Prix unitaire" />
                    <field name="values" sum="Valeur total" />
                </xpath>
                <xpath expr="field[@name='virtual_available']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
        <record id="product_product_tree_inherit_nexources" model="ir.ui.view">
            <field name="name">product.product.tree.inherit.nexources</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view" />
            <field name="arch" type="xml">
                <xpath expr="field[@name='lst_price']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="field[@name='standard_price']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>