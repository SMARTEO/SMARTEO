<odoo>
    <data>
        <record id="sale_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='order_details']/div" position="attributes">
                    <attribute name="groups">base.group_user</attribute>
                </xpath>
                <xpath expr="//group[@name='order_details']/field[@name='date_order']" position="attributes">
                    <attribute name="groups">base.group_user</attribute>
                </xpath>
                <xpath expr="//button[@name='action_quotation_send']" position="after">
                    <button name="update_all_margin" type="object" string="MAJ MARGE" invisible="1" />
                </xpath>
                <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="string">Prix unitaire HT</attribute>
                </xpath>
                <xpath expr="//header/button[@name='action_confirm'][2]" position="attributes">
                    <attribute name="groups">smt_sale.group_hide_security</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>