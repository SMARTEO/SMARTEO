            <xpath expr="//div[@id='informations']" position="replace">
                <div id="informations" class="mt32 mb32">
                    <div class="row">
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                            <strong>Date de la facture:</strong>
                            <p class="m-0" t-esc="o.invoice_date.strftime('%d/%m/%Y')" />
                        </div>
                        <div name="reference" class="col-auto mw-100 mb-2" t-if="o.ref">
                            <strong>Référence:</strong>
                            <p class="m-0" t-field="o.ref" />
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date">
                            <strong>Date d'échéance:</strong>
                            <p class="m-0" t-esc="o.invoice_date_due.strftime('%d/%m/%Y')" />
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                            <strong>Origine:</strong>
                            <p class="m-0" t-field="o.invoice_origin" />
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                            <strong>Numéro de client:</strong>
                            <p class="m-0" t-field="o.partner_id.ref" />
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//p[@name='payment_term']/span[@t-field='o.invoice_payment_term_id.note']" position="replace">
                <t t-if="o.invoice_payment_term_id.payment_method">
                    <t t-if="o.invoice_payment_term_id.default_description and o.invoice_date_due">
                        <span t-if="o.invoice_payment_term_id.payment_method == 'transaction'">
                            <span class="font-weight-bolder">Paiement par virement au plus tard le </span>
                            <t class="m-0" t-esc="o.invoice_date_due.strftime('%d/%m/%Y')" />
                        </span>
                        <span t-if="o.invoice_payment_term_id.payment_method == 'check'">
                            <span class="font-weight-bolder">Paiement par chèque bancaire le </span>
                            <t class="m-0" t-esc="o.invoice_date_due.strftime('%d/%m/%Y')" />
                        </span>
                        <span t-if="o.invoice_payment_term_id.payment_method == 'cash'">
                            <span class="font-weight-bolder">Paiement en espèce le </span>
                            <t class="m-0" t-esc="o.invoice_date_due.strftime('%d/%m/%Y')" />
                        </span>
                    </t>
                    <t t-else="">
                        <span t-field="o.invoice_payment_term_id.note" />
                    </t>
                </t>
            </xpath>
            <xpath expr="//div[hasclass('page')]" position="attributes">
                <attribute name="style">font-size: 12px !important;</attribute>
            </xpath>
            <xpath expr="//table[hasclass('o_main_table')]/thead/tr[1]" position="attributes">
                <attribute name="style">font-size: 11px !important;</attribute>
            </xpath>

