<odoo>
    <data>
        <template id="external_layout_boxed_nexource" inherit_id="web.external_layout_boxed">
            <xpath expr="//div[hasclass('o_boxed_header')]" position="replace">
                <div class="o_boxed_header">
                    <div class="row mb8">
                        <div class="col-6">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo" />
                        </div>
                        <div class="col-6 text-right mb4">
                            <h4 class="mt0" t-field="company.name" />
                            <div class="mb4">
                                <div>
                                    <span t-field="company.street" />
                                </div>
                                <div>
                                    <span t-field="company.street2" />
                                    &#160;
                                    <span t-field="company.city" />
                                    &#160;
                                    <span t-field="company.state_id.name" />
                                    &#160;
                                    <span t-field="company.zip" />
                                    &#160;
                                    <span t-field="company.country_id.name" />
                                </div>
                            </div>
                            <h5 style="font-size:20px !important;" t-field="company.report_header" />
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[hasclass('text-center')]" position="replace">
                <div class="text-center">
                    <div style="font-size:11px !important; margin-top: 20px !important;" t-field="company.report_footer" />
                    <div t-if="report_type == 'pdf'">
                        <span class=" page" />
                        /
                        <span class=" topage" />
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>