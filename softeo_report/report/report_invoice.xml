<odoo>
    <data>
        <template id="report_invoice_document_inh" inherit_id="account.report_invoice_document">
            <!-- <xpath expr="//div[@id='total']/div" position="before">
                <t t-if="o.company_id.name=='SOFTEO'">
                    <div t-att-class="'col-8' if report_type != 'html' else 'col-sm-5 col-md-7'">
                        <div>
                            <strong>Arrêté la presente facture à la somme de</strong>
                            &#160;
                            <span t-esc="o.currency_id.with_context(lang=o.partner_id.lang or 'en_US').amount_to_text(o.amount_total).upper()" />
                            &#160;
                        </div>
                    </div>
                </t>
            </xpath> -->
            <xpath expr="//div[hasclass('page')]" position="before">
                <t t-if="o.company_id.name=='SOFTEO'">
                    <t t-set="information_block">
                        <div t-if="o.partner_shipping_id">
                            <strong>Adresse de livraison:</strong>
                            <div t-field="o.partner_shipping_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                        </div>
                    </t>
                </t>
            </xpath>
            <xpath expr="//div[hasclass('page')]" position="attributes">
                <t t-if="o.company_id.name=='SOFTEO'">
                    <attribute name="style">padding-top:1px !important; color :black !important;</attribute>
                </t>
            </xpath>
            
            <xpath expr="//t[@t-set='address']" position="replace">
                <t t-set="address">
                    <address t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}" />
                    <div t-if="o.partner_id.vat" class="mt16" id="partner_vat_address_same_as_shipping">
                        <t t-if="o.company_id.account_fiscal_country_id.vat_label" t-esc="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label" />
                        <t t-else="">Tax ID</t>
                        :
                        <span t-field="o.partner_id.vat" />
                    </div>
                    <div>
                        <span t-if="o.partner_id.nif">NIF :</span>
                        <span t-field="o.partner_id.nif" />
                        <span t-if="o.partner_id.nif">/</span>
                        <span t-if="o.partner_id.stat">STAT :</span>
                        <span t-field="o.partner_id.stat" />
                        <br />
                        <span t-if="o.partner_id.rcs">RCS :</span>
                        <span t-field="o.partner_id.rcs" />
                        <span t-if="o.partner_id.rcs">/</span>
                        <span t-if="o.partner_id.cif">CIF :</span>
                        <span t-field="o.partner_id.cif" />
                    </div>
                </t>
            </xpath>

            <xpath expr="//p[@name='payment_communication']" position="replace">
                <!-- <t t-if="o.company_id.name=='SOFTEO'"> -->
                    <p t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference" name="payment_communication">
                        <b>
                            Lors de votre paiement, merci d'indiquer le numéro de votre facture :
                            <span t-field="o.payment_reference" />
                        </b>
                    </p>
                <!-- </t> -->
            </xpath>
            <xpath expr="//div[@class='page']//h2" position="replace">
                <h2>
                    <t t-if="o.company_id.name == 'SOFTEO'">
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Softeo - Invoice</span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Softeo - Draft Invoice</span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Softeo - Cancelled Invoice</span>
                        <span t-if="o.move_type == 'out_refund'">Softeo - Credit Note</span>
                        <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                        <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                        <span t-if="o.name != '/'" t-field="o.name"/>
                    </t>
                    <t t-else="">
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                        <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                        <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                        <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                        <span t-if="o.name != '/'" t-field="o.name"/>
                    </t>
                </h2>
            </xpath>

            <xpath expr="//th[@name='th_taxes']" position="attributes">
                <attribute name="t-attf-style">display: {{ 'none' if o.company_id.name == "SOFTEO" else "grid" }}</attribute>
            </xpath>

            <xpath expr="//t[@name='account_invoice_line_accountable']/td[last()-1]" position="attributes">
                <attribute name="t-attf-style">display: {{'none' if o.company_id.name == "SOFTEO" else "grid"}}</attribute>
            </xpath>

            <xpath expr="//div[@id='informations']" position="replace">
                <div id="informations" class="mt32 mb32">
                    <div class="row">
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                            <strong>Date de la facture:</strong>
                            <p class="m-0" t-esc="o.invoice_date.strftime('%d/%m/%Y')" />
                        </div>
                        <div name="reference" class="col-auto mw-100 mb-2" t-if="o.ref">
                            <strong>Référence:</strong>
                            <p class="m-0" t-field="o.ref" />
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date">
                            <strong>Date d'échéance:</strong>
                            <p class="m-0" t-esc="o.invoice_date_due.strftime('%d/%m/%Y')" />
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                            <strong>Origine:</strong>
                            <p class="m-0" t-field="o.invoice_origin" />
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                            <strong>Numéro de client:</strong>
                            <p class="m-0" t-field="o.partner_id.ref" />
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//p[@name='payment_term']" position="replace">
                <t t-if="o.company_id.name=='SOFTEO'">
                    <t t-if="o.invoice_payment_term_id.payment_method">
                        <t t-if="o.invoice_payment_term_id.default_description and o.invoice_date_due">
                            <span t-if="o.invoice_payment_term_id.payment_method == 'transaction'">
                                <span class="font-weight-bolder">Paiement par virement au plus tard le </span>
                                <t class="m-0" t-esc="o.invoice_date_due.strftime('%d/%m/%Y')" />
                            </span>
                            <span t-if="o.invoice_payment_term_id.payment_method == 'check'">
                                <span class="font-weight-bolder">Paiement par chèque bancaire le </span>
                                <t class="m-0" t-esc="o.invoice_date_due.strftime('%d/%m/%Y')" />
                            </span>
                            <span t-if="o.invoice_payment_term_id.payment_method == 'cash'">
                                <span class="font-weight-bolder">Paiement en espèce le </span>
                                <t class="m-0" t-esc="o.invoice_date_due.strftime('%d/%m/%Y')" />
                            </span>
                        </t>
                        <t t-else="">
                            <span t-field="o.invoice_payment_term_id.note" />
                        </t>
                    </t>
                </t>
            </xpath>

        </template>
    </data>
</odoo>